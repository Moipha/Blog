{
  "compilerOptions": {  
    "module": "ESNext",  
    "target": "ESNext",  
    "moduleResolution": "node",  
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}