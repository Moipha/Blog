{
  "compilerOptions": {  
    "target": "ES6",  
    "module": "ES2020",  
    "strict": true,  
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",  
    "rootDir": "./src",  
    // "resolveJsonModule": true,  
    "isolatedModules": true  
  },  
  "include": ["src/**/*"],  
  "exclude": ["node_modules", "**/*.spec.ts"]
}